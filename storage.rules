rules_version = '2';

// Firebase Storage Security Rules for CoperniGeo
// Last updated: 2025-12-12

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Helper function to validate image files
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Helper function to validate PDF files
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }
    
    // Helper function to check file size (max 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // ============================================
    // EMAIL IMAGES (Generated by Server)
    // ============================================
    // Public read access for email images
    // Only Admin SDK (server) can write
    match /email-images/{imageId} {
      allow read: if true; // Public read for email clients
      allow write: if false; // Only server with Admin SDK can write
      allow delete: if false; // Only server with Admin SDK can delete
    }
    
    // ============================================
    // USER REPORTS (Generated PDFs)
    // ============================================
    // Users can only access their own reports
    match /reports/{userId}/{reportId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isPDF() && isValidSize();
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // USER UPLOADS (Future use)
    // ============================================
    // Users can upload images to their own folder
    match /user-uploads/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isImage() && isValidSize();
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // PUBLIC ASSETS (Company assets, logos, etc.)
    // ============================================
    match /public/{allPaths=**} {
      allow read: if true; // Anyone can read
      allow write: if false; // Only Admin SDK can write
    }
    
    // ============================================
    // CACHE (Satellite imagery cache - if needed)
    // ============================================
    match /cache/{allPaths=**} {
      allow read: if isAuthenticated(); // Only authenticated users
      allow write: if false; // Only Admin SDK can write
      allow delete: if false; // Only Admin SDK can delete
    }
    
    // ============================================
    // DEFAULT DENY (Security by default)
    // ============================================
    // Any path not explicitly allowed above is denied
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

